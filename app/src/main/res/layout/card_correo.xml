<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvCorreo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/shape"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/cardCorreoAsunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardCorreoRemitente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="remitente"
            android:textSize="20sp"
            android:layout_alignEnd="@+id/cardTratamientoMedicoMedicamento"
            android:layout_alignTop="@+id/cardCorreoFecha" />

        <TextView
            android:id="@+id/cardCorreoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cardCorreoNuevo"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/cardCorreoFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/cardCorreoNuevo"
            android:text="Fecha"
            android:textSize="20sp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>